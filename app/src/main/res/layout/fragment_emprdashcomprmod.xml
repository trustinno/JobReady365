<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goldenictsolutions.win.jobready365_.employer.Emprdashcomprmod">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/scroll_bar_vertical_thumb"
        android:scrollbarTrackVertical="@drawable/empr_scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:layout_marginLeft="14dp"
                    android:hint="Company Name"
                    android:paddingLeft="8dp"
                    android:background="@drawable/border"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:layout_marginLeft="14dp"
                    android:hint="Telephone"
                    android:paddingLeft="8dp"
                    android:inputType="phone"
                    android:background="@drawable/border"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight ="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:layout_marginLeft="14dp"
                    android:hint="Email"
                    android:paddingLeft="8dp"
                    android:background="@drawable/border"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="@dimen/empr_between_layout"
                    android:src="@drawable/ic_school_black_24dp"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/state_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:hint="State/Division"
                    android:textColorHint="#05ab9a"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingTop="@dimen/empr_between_layout"
                    android:src="@drawable/ic_school_black_24dp"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/township_spinner"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColorHint="#05ab9a"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:layout_marginLeft="14dp"
                    android:hint="Primary Person"
                    android:paddingLeft="8dp"
                    android:background="@drawable/border"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:layout_marginLeft="14dp"
                    android:hint="Telephone"
                    android:paddingLeft="8dp"
                    android:background="@drawable/border"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:layout_marginLeft="14dp"
                    android:hint="Secondary Person"
                    android:paddingLeft="8dp"
                    android:background="@drawable/border"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:layout_marginLeft="14dp"
                    android:hint="Telephone"
                    android:paddingLeft="8dp"
                    android:background="@drawable/border"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:layout_marginLeft="14dp"
                    android:hint="Company About"
                    android:paddingLeft="8dp"
                    android:background="@drawable/border"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_school_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:maxLines="1"
                    android:layout_marginLeft="14dp"
                    android:hint="Company Logo"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:background="@drawable/border"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingTop="@dimen/activity_horizontal_margin">
                <Button
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:background="@color/colorback"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/empr_dash_commod_save"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
